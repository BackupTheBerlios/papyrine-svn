<?xml version='1.0' xmlns="plugin.rng">
<plugin>
	<name>RSS 1.0 Syndication Plugin</name>
	<description>Provides various feeds in the RSS 1.0 format</description>
	<website>http://web.resource.org/rss/1.0/</website>
	<version>0.1</version>
	<author>
		<name>Thomas Reynolds</name>
		<email>thomasr@infograph.com</email>
	</author>
	<class>RSS1Plugin.class.php</class>
	<layout>
		<node id="root">
			<node id="categories">
				<node id="archive-by-category">
					<node id="feeds">
						<node id="category-feed-rss20" 
						      template="Templates/category_rss_10.xml"
						      identifier="rss20" />
					</node>
				</node>
			</node>
			<node id="feeds">
				<node id="recent-feed-rss20" 
				      template="Templates/recent_rss_10.xml"
				      identifier="rss20" />
			</node>
		</node>
	</layout>
</plugin>
